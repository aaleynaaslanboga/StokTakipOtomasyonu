@using StokTakipOtomasyonu.ActiveFolder

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <title>ASP.NET STOK TAKIP OTOMASYONU</title>
    <link rel="icon" type="image/x-icon" href="~/Images/logo.png">
    <link href="~/CSS/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/animsition.min.css">
    <!-- animsition CSS -->
    <link rel="stylesheet" href="/css/animsition.min.css">
    <link href="/CSS/StyleSheet1.css" rel="stylesheet" />
    <!-- vendor js -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

    <!-- animsition js -->
    <script src="/js/jquery.animsition.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-static-top" style="background-color: #231B1B; ">
        <div class="container px-5">
            <a href="/Home/HomePage/" class="navbar-brand">Stok Takip Otomasyonu</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto" style="color:#E3DBDB">
                    <li class="nav-item">
                        <a class="nav-link @Html.ActivePage("Products","Index")" href="#!">
                            Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @Html.ActivePage("Categories", "Index");" href="/Categories/Index">
                            Categories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  @Html.ActivePage("Brand","Brand")" href="/Brand/Brand">
                            Brands
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  @Html.ActivePage("Units","Unit")" href="/Units/Unit">
                            Units
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:20px;">
        <div class="row navbar-f-top">
            @RenderBody()
        </div>

    </div>
    <!-- Footer-->
    <footer class="py-5 " style="background-color: #231B1B; position: absolute; bottom: 0; width: 100%; height: 2.5rem; ">
        <div class="container px-5"><p class="m-0 text-center text-white small" style="color: #E3DBDB ">Copyright &copy; Aleyna Aslanboga 2022</p></div>
    </footer>
    </body>
</html> 

