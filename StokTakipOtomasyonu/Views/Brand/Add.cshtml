@model StokTakipOtomasyonu.Models.Entity.Brands
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Brand</h2>
<br />
<div class="container">
    @using (Html.BeginForm("Add", "Brand", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Categories.Category)
            @Html.DropDownList("CategoryID", null, "Select Category", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Brand)
            @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Brand, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Description)
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
        </div>
       
        <div class="form-group">
            <br />
            <button class="btn btn-success"> Add Category</button>
        </div>
            
        
    }
</div>


