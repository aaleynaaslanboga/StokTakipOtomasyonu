@model StokTakipOtomasyonu.Models.Entity.Brands
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Brand</h2>

<div class="container">

    @using (@Html.BeginForm("Update_Save", "Brand"))
    {
        @*@Html.ValidationSummary(false, null, new { @class = "text-danger" })*@
        @Html.HiddenFor(x => x.ID)

        <div class="form-group">
            @Html.LabelFor(x => x.Categories.Category)
            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.aleyna, "--SELECT--", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryID, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Brand)
            @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Brand, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Description)
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <br />
            <button class="btn btn-success"> Update Brand</button>
        </div>

    }

</div>

@section scriptdanger
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
