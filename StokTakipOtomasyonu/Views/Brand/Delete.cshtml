@model StokTakipOtomasyonu.Models.Entity.Brands
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Brand</h2>

<div class="container">
    @using (@Html.BeginForm("Delete_Save", "Brand"))
    {
        @Html.HiddenFor(x => x.ID)

        <div class="form-group">
            <b>@Html.LabelFor(x => x.Categories.Category):</b>
            @Html.DisplayFor(x => x.Categories.Category)
        </div>

        <div class="form-group">
            <b>@Html.LabelFor(x => x.Brand):</b>
            @Html.DisplayFor(x => x.Brand)
        </div>

        <div class="form-group">
            <b>@Html.LabelFor(x => x.Description):</b>
            @Html.DisplayFor(x => x.Description)
        </div>

        <div>
            <button class="btn btn-danger" >
                Delete Brand
            </button>
            <a href="/Brand/Brand/">Return the Brands List</a>
        </div>
    }

</div>

