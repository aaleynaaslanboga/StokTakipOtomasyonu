@model StokTakipOtomasyonu.Models.Entity.Units

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Selected Unit</h2>

<div class="container">
    <form action="/Units/Update_Save/">
        @Html.HiddenFor(x => x.ID)  <br />
        <div class="form-group">
            <b>Unit</b>
            <br />
            <br />
            @Html.TextAreaFor(x => x.Unit, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <b>Description</b>
            <br />
            <br />
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>
        <br />
        <div class="form-group">
            <button class="btn btn-success"> Update Unit</button>
        </div>
    </form>



</div>
