@model StokTakipOtomasyonu.Models.Entity.Units

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Selected Unit</h2>

<div class="container">
    <form action="/Units/Update_Save/">
        @Html.HiddenFor(x => x.ID)  <br />
        <div class="form-group">
            <b>Unit</b>
            @Html.TextBoxFor(x => x.Unit, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Unit, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <b>Description</b>
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
        </div>
        <br />
        <div class="form-group">
            <button class="btn btn-success"> Update Unit</button>
        </div>
    </form>
</div>
@section scriptdanger
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

