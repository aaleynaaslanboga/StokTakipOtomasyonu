@model StokTakipOtomasyonu.Models.Entity.Categories
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Category</h2>

<div class="container">
    @using (Html.BeginForm("Add","Categories", FormMethod.Post))
    {
  
        <div class="form-group">
            @Html.LabelFor(x => x.Category)
            @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Category, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
        </div>
        <br />
        <div class="form-group">
            <button class="btn btn-success">Add Category</button>
        </div>
        <br />
    }

</div>
@section scriptdanger
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

