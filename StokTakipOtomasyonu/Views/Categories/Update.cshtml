@model StokTakipOtomasyonu.Models.Entity.Categories

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Selected Category</h2>

<div class="container">
    <form action="/Categories/Update_Save/">
        @Html.HiddenFor(x => x.ID)  <br />
        <div class="form-group">
            <b>Category</b>
            @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Category, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <b>Description</b>
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
        </div>
        <br />
        <div class="form-group">
            <button class="btn btn-success"> Update Category</button>
        </div>
    </form>
</div>

@section scriptdanger {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}